<%- model_class = UserBusinessProfile -%>
<div class="page-header">
  <h1><%=t '.title', :default => UserBusinessProfile %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:is_owner) %></th>
      <th><%= model_class.human_attribute_name(:position) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @user_business_profiles.each do |user_business_profile| %>
      <tr>
        <td><%= user_business_profile.id %></td>
        <td><%= user_business_profile.is_owner %></td>
        <td><%= user_business_profile.position %></td>
        <td><%=l user_business_profile.created_at, format: :long %></td>
        <td>
          <%= link_to user_business_profile_path(user_business_profile), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to user_business_profile_path(user_business_profile), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_business_profile_path,
            :class => 'btn btn-primary' %>
