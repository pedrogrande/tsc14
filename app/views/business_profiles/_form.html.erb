<%= simple_form_for(@business_profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :owner %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :twitter %>
    <%= f.input :facebook %>
    <%= f.input :linkedin %>
    <%= f.input :url %>
    <%= f.input :google %>
    <%= f.input :address %>
    <%= f.input :building %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :postcode %>
    <%= f.input :country %>
    <%= f.input :logo %>
    <%= f.input :image %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :slug %>
    <%= f.association :category %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
